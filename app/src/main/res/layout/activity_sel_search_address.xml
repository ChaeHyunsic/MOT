<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelSearchAddressActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="예 ) 한남동 123, 도산대로 33"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:textColorHint="#B5B5B5"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btn_AddressSearchDetail"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/btn_adr_search"
        android:text="검색"
        android:textColor="#B5B5B5"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/tv_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:text="@string/address_example"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/tv_adrnumber"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/address_bg"
        android:gravity="center"
        android:text="우편\n번호"
        android:textColor="#9F9F9F"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_example"
        app:layout_constraintTop_toBottomOf="@+id/tv_example" />

    <TextView
        android:id="@+id/tv_adr"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:background="@drawable/address_bg"
        android:gravity="center"
        android:text="주소"
        android:textColor="#9F9F9F"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_adrnumber"
        app:layout_constraintStart_toEndOf="@+id/tv_adrnumber"
        app:layout_constraintTop_toTopOf="@+id/tv_adrnumber" />

    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/tv_adr"
        app:layout_constraintStart_toStartOf="@+id/tv_adrnumber"
        app:layout_constraintTop_toBottomOf="@+id/tv_adr">

        <TextView
            android:id="@+id/adrnumber_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="06653"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_adrDetail_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="서울특별시 서초구 반포대로 23길 6 ( 서초동, 효진빌딩 )"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/btn_choose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:gravity="center"
            android:text="선택"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:layout_width="340dp"
        android:layout_height="0.8dp"
        android:background="#B5B5B5"
        app:layout_constraintEnd_toEndOf="@+id/result_layout"
        app:layout_constraintStart_toStartOf="@+id/result_layout"
        app:layout_constraintTop_toBottomOf="@+id/result_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>