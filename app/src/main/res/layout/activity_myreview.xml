<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyreviewActivity">

    <TextView
        android:id="@+id/title_myreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="나의 후기"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:background="#00ff0000"
        android:contentDescription="back"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/title_myreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_myreview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_allarea_select"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:contentDescription="allarea"
                android:drawableTop="@drawable/edit_allarea_unselect"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:text="지역"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_around_select"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:padding="10dp"
                android:text="내 주변"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:contentDescription="myaround"
                android:drawableTop="@drawable/edit_myaround_unselect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_main_select"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:contentDescription="mainhome"
                android:padding="10dp"
                android:text="메인"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/edit_main_unselect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_mypick_select"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:padding="10dp"
                android:contentDescription="mypick"
                android:text="찜"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/edit_mypick_unselect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_mypage_select"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#00ff0000"
                android:contentDescription="mypage"
                android:paddingTop="10dp"
                android:text="마이페이지"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/edit_mypage_select"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_myreview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <androidx.cardview.widget.CardView
                android:id="@+id/myreview_cardview1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:elevation="50dp"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/myreview_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="20dp"
                        android:background="#00ff0000"
                        android:gravity="top"
                        android:text="바다풍경팬션 부산"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RatingBar
                        android:id="@+id/myreview_rating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#FDE400"
                        android:stepSize="0.5"
                        app:layout_constraintStart_toStartOf="@+id/myreview_item_title"
                        app:layout_constraintTop_toBottomOf="@+id/myreview_item_title" />

                    <TextView
                        android:id="@+id/myreview_usedate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="지난주"
                        android:textColor="#525252"
                        android:textSize="8sp"
                        app:layout_constraintBottom_toBottomOf="@+id/myreview_rating"
                        app:layout_constraintStart_toEndOf="@+id/myreview_rating"
                        app:layout_constraintTop_toTopOf="@+id/myreview_rating" />

                    <ImageView
                        android:id="@+id/myreview_edit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:contentDescription="edit"
                        android:padding="5dp"
                        android:src="@drawable/edit"
                        app:layout_constraintEnd_toStartOf="@+id/myreview_del"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/myreview_del"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:contentDescription="delete"
                        android:padding="5dp"
                        android:src="@drawable/delete"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_myreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/my_review"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/myreview_rating"
                        app:layout_constraintTop_toBottomOf="@+id/myreview_rating" />

                    <TextView
                        android:id="@+id/myreview_use_room"
                        android:layout_width="127dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/use_room_shape"
                        android:gravity="center"
                        android:text="패키지1 / 6인 온돌룸, 소형 온돌룸"
                        android:textColor="#525252"
                        android:textSize="7.5sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_myreview"
                        app:layout_constraintTop_toBottomOf="@+id/tv_myreview" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>