<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*정보를 수정해주세요."
            android:textColor="#2564DE"
            android:layout_marginTop="59dp"
            android:layout_marginStart="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/room_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소형 온돌 룸"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/top_tv"
            app:layout_constraintStart_toStartOf="@id/top_tv"/>

        <TextView
            android:id="@+id/room_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거실 1, 화장실 1"
            android:textSize="13sp"
            android:textColor="#7E7E7E"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/room_name_tv"
            app:layout_constraintStart_toStartOf="@id/room_name_tv"/>

        <ImageView
            android:id="@+id/room_modify1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_modify"
            android:layout_marginStart="200dp"
            app:layout_constraintTop_toTopOf="@id/room_info_tv"
            app:layout_constraintStart_toEndOf="@id/room_info_tv"
            />

        <TextView
            android:id="@+id/room_modify1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/room_modify1_iv"
            app:layout_constraintStart_toStartOf="@id/room_modify1_iv"
            app:layout_constraintEnd_toEndOf="@id/room_modify1_iv"
            app:layout_constraintBottom_toBottomOf="@id/room_modify1_iv"/>

        <ImageView
            android:id="@+id/division1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_division_thin"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/room_modify1_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/basic_info1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본정보"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/division1_iv"
            app:layout_constraintStart_toStartOf="@id/room_info_tv"/>

        <ImageView
            android:id="@+id/room_modify2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_modify"
            app:layout_constraintTop_toTopOf="@id/basic_info1_tv"
            app:layout_constraintEnd_toEndOf="@id/room_modify1_iv"
            />

        <TextView
            android:id="@+id/room_modify2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/room_modify2_iv"
            app:layout_constraintStart_toStartOf="@id/room_modify2_iv"
            app:layout_constraintEnd_toEndOf="@id/room_modify2_iv"
            app:layout_constraintBottom_toBottomOf="@id/room_modify2_iv"/>

        <TextView
            android:id="@+id/basic_info2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_info"
            android:textColor="#7E7E7E"
            android:textSize="13sp"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/basic_info1_tv"
            app:layout_constraintStart_toStartOf="@id/basic_info1_tv"/>


        <ImageView
            android:id="@+id/division2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_division_thin"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/basic_info2_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/cancel1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_cancel"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/division2_iv"
            app:layout_constraintEnd_toEndOf="@id/room_modify2_iv"/>

        <ImageView
            android:id="@+id/room_picture1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/room_modify"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cancel1_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/room_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_room_add2"
            android:layout_marginTop="57dp"
            app:layout_constraintTop_toBottomOf="@id/room_picture1_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/room_add_camera_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_camera"
            app:layout_constraintTop_toTopOf="@id/room_add_iv"
            app:layout_constraintStart_toStartOf="@id/room_add_iv"
            app:layout_constraintEnd_toEndOf="@id/room_add_iv"
            app:layout_constraintBottom_toBottomOf="@id/room_add_iv"/>

        <TextView
            android:id="@+id/room_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 첨부하기"
            android:textSize="13sp"
            android:textColor="#2564DE"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/room_add_camera_iv"
            app:layout_constraintStart_toStartOf="@id/room_add_iv"
            app:layout_constraintEnd_toEndOf="@id/room_add_iv"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>