<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/prev_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:contentDescription="prev"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/prev_img" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="검색 결과"
                android:textAppearance="@style/title_style"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.widget.Button
                android:id="@+id/date_btn"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/search_result_btn_background"
                android:drawableLeft="@drawable/date_drawable"
                android:paddingLeft="15dp"
                android:text="5월 13일 ~ 5월 17일"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/prev_btn"
                app:layout_constraintTop_toBottomOf="@+id/prev_btn" />

            <android.widget.Button
                android:id="@+id/person_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/search_result_btn_background"
                android:drawableLeft="@drawable/person_drawable"
                android:paddingLeft="15dp"
                android:text="40명"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/date_btn"
                app:layout_constraintTop_toTopOf="@+id/date_btn" />

            <ImageView
                android:id="@+id/fitter_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_btn"
                app:srcCompat="@drawable/fitter_img" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:background="#FFFFFF"
                android:elevation="40dp"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fitter_btn">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/result_img1"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/result_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:text="아리랑 팬션 부산"
                        android:textAppearance="@style/title_style"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/result_img1" />

                    <RatingBar
                        android:id="@+id/result_ratingBar1"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/result_title1"
                        app:layout_constraintTop_toBottomOf="@+id/result_title1" />

                    <TextView
                        android:id="@+id/result_rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="4.5"
                        android:textAppearance="@style/anno_style"
                        app:layout_constraintStart_toEndOf="@+id/result_ratingBar1"
                        app:layout_constraintTop_toBottomOf="@+id/result_title1" />

                    <ImageView
                        android:id="@+id/result_wanted1"
                        android:layout_width="23dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/result_ratingBar1"
                        app:layout_constraintEnd_toEndOf="@+id/result_img1"
                        app:layout_constraintTop_toTopOf="@+id/result_title1"
                        app:srcCompat="@drawable/wanted_img" />

                    <TextView
                        android:id="@+id/result_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="1인"
                        android:textAppearance="@style/title_style"
                        app:layout_constraintStart_toStartOf="@+id/result_title1"
                        app:layout_constraintTop_toBottomOf="@+id/result_ratingBar1" />

                    <TextView
                        android:id="@+id/result_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="25,000원"
                        android:textAppearance="@style/text_style"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/result_tv1" />

                    <TextView
                        android:id="@+id/result_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:text="합계 금액"
                        android:textAppearance="@style/title_style"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/result_tv1"
                        app:layout_constraintTop_toBottomOf="@+id/result_tv1" />

                    <TextView
                        android:id="@+id/result_total1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:text="600,000원"
                        android:textAppearance="@style/text_style"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/result_tv2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>