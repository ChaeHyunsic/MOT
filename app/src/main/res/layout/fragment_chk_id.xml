<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modify_chk_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/id_chk_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:text="정보와 일치하는 아이디 입니다."
        android:textAppearance="@style/black_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/id_chk_iv"
        android:layout_width="295dp"
        android:layout_height="128dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/rectangle_blank"
        app:layout_constraintTop_toBottomOf="@id/id_chk_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/reg_id1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="아이디: "
        android:textAppearance="@style/black_15"
        app:layout_constraintEnd_toStartOf="@id/reg_id2_tv"
        app:layout_constraintStart_toStartOf="@id/id_chk_iv"
        app:layout_constraintTop_toTopOf="@id/id_chk_iv" />

    <TextView
        android:id="@+id/reg_id2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dir0093"
        android:textAppearance="@style/black_15"
        app:layout_constraintTop_toTopOf="@id/reg_id1_tv"
        app:layout_constraintStart_toEndOf="@id/reg_id1_tv"
        app:layout_constraintEnd_toEndOf="@id/id_chk_iv"
        />

    <TextView
        android:id="@+id/reg_date1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="가입일: "
        android:textAppearance="@style/black_15"
        app:layout_constraintTop_toBottomOf="@id/reg_id1_tv"
        app:layout_constraintStart_toStartOf="@id/reg_id1_tv"
        app:layout_constraintEnd_toEndOf="@id/reg_id1_tv"
        />

    <TextView
        android:id="@+id/reg_date2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023. 08. 15"
        android:textAppearance="@style/black_15"
        app:layout_constraintTop_toTopOf="@id/reg_date1_tv"
        app:layout_constraintStart_toEndOf="@id/reg_date1_tv"
        app:layout_constraintEnd_toEndOf="@id/id_chk_iv"
        />

    <ImageButton
        android:id="@+id/btn_ib"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:src="@drawable/rectange_yellow"
        android:layout_marginTop="275dp"
        android:contentDescription="chk"
        app:layout_constraintTop_toBottomOf="@id/id_chk_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="확인"
        android:textAppearance="@style/black_20"
        app:layout_constraintTop_toTopOf="@id/btn_ib"
        app:layout_constraintStart_toStartOf="@id/btn_ib"
        app:layout_constraintEnd_toEndOf="@id/btn_ib"
        app:layout_constraintBottom_toBottomOf="@id/btn_ib"
        />


</androidx.constraintlayout.widget.ConstraintLayout>