<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/splash_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="@string/app_name"
        android:textColor="@color/personal_color"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/anno_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="MOT 파트너 센터입니다"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/anno_tv2"
        app:layout_constraintEnd_toEndOf="@+id/splash_tv"
        app:layout_constraintStart_toStartOf="@+id/splash_tv" />

    <TextView
        android:id="@+id/anno_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="환영합니다"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/anno_tv1"
        app:layout_constraintStart_toStartOf="@+id/anno_tv1" />

</androidx.constraintlayout.widget.ConstraintLayout>