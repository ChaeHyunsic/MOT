<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:id="@+id/sell_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="scroll">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sell_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/three_dot_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_dot"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/room_example_iv"
                android:layout_width="wrap_content"
                android:layout_height="255dp"
                android:src="@drawable/room_example"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/three_dot_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/room_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="바다풍경팬션 부산"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="29dp"
                app:layout_constraintTop_toBottomOf="@id/room_example_iv"
                app:layout_constraintStart_toStartOf="@id/room_example_iv"/>

            <ImageView
                android:id="@+id/location_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_location"
                app:layout_constraintTop_toBottomOf="@id/room_name_tv"
                app:layout_constraintStart_toStartOf="@id/room_name_tv"
                />

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해운대 4분거리"
                android:textColor="#558FFF"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/location_iv"
                app:layout_constraintStart_toEndOf="@id/location_iv"/>

            <ImageView
                android:id="@+id/line1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_line25"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/location_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/basic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기본정보"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@id/line1_iv"
                app:layout_constraintStart_toStartOf="@id/line1_iv"/>

            <TextView
                android:id="@+id/basic_modify_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginStart="290dp"
                app:layout_constraintTop_toTopOf="@id/basic_tv"
                app:layout_constraintStart_toEndOf="@id/basic_tv"
                />

            <TextView
                android:id="@+id/basic_info_tv"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:text="해운대 해수욕장 제일가까운 펜션, 단체룸, 투룸, 침실룸, 온돌룸,\n 개별 취사, 바베큐시설. 1. 해운 대해수욕장 정중앙에 위치"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/basic_tv"
                app:layout_constraintStart_toStartOf="@id/basic_tv" />

            <ImageView
                android:id="@+id/division1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_division_thin"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/basic_info_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적용필터"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@id/division1_iv"
                app:layout_constraintStart_toStartOf="@id/basic_tv"/>

            <TextView
                android:id="@+id/filter_modify_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginStart="290dp"
                app:layout_constraintTop_toTopOf="@id/filter_tv"
                app:layout_constraintStart_toEndOf="@id/filter_tv"
                />

            <ImageView
                android:id="@+id/filter1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_blanck_rectangle"
                android:layout_marginTop="19dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/filter_tv"
                app:layout_constraintStart_toStartOf="@id/filter_tv"/>

            <TextView
                android:id="@+id/filter1_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오션뷰"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/filter1_iv"
                app:layout_constraintStart_toStartOf="@id/filter1_iv"
                app:layout_constraintEnd_toEndOf="@id/filter1_iv"
                app:layout_constraintBottom_toBottomOf="@id/filter1_iv"/>

            <ImageView
                android:id="@+id/filter2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_blanck_rectangle"
                android:layout_marginTop="19dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/filter_tv"
                app:layout_constraintStart_toEndOf="@id/filter1_iv"/>

            <TextView
                android:id="@+id/filter2_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오션뷰"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/filter2_iv"
                app:layout_constraintStart_toStartOf="@id/filter2_iv"
                app:layout_constraintEnd_toEndOf="@id/filter2_iv"
                app:layout_constraintBottom_toBottomOf="@id/filter2_iv"/>

            <ImageView
                android:id="@+id/filter3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_blanck_rectangle"
                android:layout_marginTop="19dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/filter_tv"
                app:layout_constraintStart_toEndOf="@id/filter2_iv"/>

            <TextView
                android:id="@+id/filter3_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오션뷰"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/filter3_iv"
                app:layout_constraintStart_toStartOf="@id/filter3_iv"
                app:layout_constraintEnd_toEndOf="@id/filter3_iv"
                app:layout_constraintBottom_toBottomOf="@id/filter3_iv"/>


            <ImageView
                android:id="@+id/division2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_division"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/filter1_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/sell_tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabSelectedTextColor="#FFC700"
                app:tabIndicatorColor="#FFC700"
                app:tabIndicatorFullWidth="true"
                app:tabGravity="fill"
                app:tabRippleColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/division2_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="패키지 소개"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="객실 소개"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="후기"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="위치/교통"/>

            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                android:id="@+id/sell_fl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/sell_tl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_rectangle"
        android:contentDescription="chk"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="예약확인"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/btn_iv"
        app:layout_constraintStart_toStartOf="@id/btn_iv"
        app:layout_constraintEnd_toEndOf="@id/btn_iv"
        app:layout_constraintBottom_toBottomOf="@id/btn_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>