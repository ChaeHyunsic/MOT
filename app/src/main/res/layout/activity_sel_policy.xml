<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:text="판매자 이용 약관 동의"
        android:textAppearance="@style/title_big_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/anno_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="필수 약관 전체 동의를 해주세요"
        android:textAppearance="@style/anno_style"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/title_tv"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    <CheckBox
        android:id="@+id/ess_all_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="필수 약관 전체 동의"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ess_cb1"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/ess_cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="0dp"
        android:text="[필수] 파트너 서비스 이용약관"
        android:textAppearance="@style/anno_style"
        app:layout_constraintBottom_toTopOf="@+id/ess_cb2"
        app:layout_constraintStart_toStartOf="@+id/ess_all_cb" />

    <TextView
        android:id="@+id/ess_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="@string/detail"
        android:textAppearance="@style/anno_style"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/ess_cb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ess_all_cb" />

    <CheckBox
        android:id="@+id/ess_cb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="[필수] 파트너 서비스 개인정보 수집 및 이용약관"
        android:textAppearance="@style/anno_style"
        app:layout_constraintBottom_toTopOf="@+id/confirm_btn"
        app:layout_constraintStart_toStartOf="@+id/ess_cb1" />

    <TextView
        android:id="@+id/ess_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail"
        android:textAppearance="@style/anno_style"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/ess_cb2"
        app:layout_constraintEnd_toEndOf="@+id/ess_tv1"
        app:layout_constraintTop_toTopOf="@+id/ess_cb2" />

    <android.widget.Button
        android:id="@+id/confirm_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background"
        android:text="@string/confirm"
        android:textAppearance="@style/splash_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>