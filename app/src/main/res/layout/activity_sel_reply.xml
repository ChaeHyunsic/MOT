<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelReplyActivity">

    <TextView
        android:id="@+id/tv_replyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="답변"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_reply_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:background="#00ff0000"
        android:contentDescription="buttonBack"
        app:layout_constraintBottom_toBottomOf="@+id/tv_replyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_replyTitle"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/tv_replyinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/replyInfo"
        android:textColor="#2564DE"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_replyTitle" />

    <EditText
        android:id="@+id/et_reply_write_box"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@null"
        android:ems="10"
        android:gravity="top"
        android:hint="답변입니다."
        android:inputType="textPersonName"
        android:maxLength="500"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_replyinfo"
        app:layout_constraintTop_toBottomOf="@+id/tv_replyinfo" />

    <android.widget.Button
        android:id="@+id/btn_settingdone"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/write_done_shape"
        android:contentDescription="buttonBack"
        android:text="답변완료"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>