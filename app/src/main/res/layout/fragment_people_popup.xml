<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/popup_border_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_popup1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/popup_x_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/vector_x"
        android:layout_marginTop="32dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="@id/popup_border_iv"
        app:layout_constraintStart_toStartOf="@id/popup_border_iv"/>

    <TextView
        android:id="@+id/popup_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원수 선택"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/popup_x_iv"/>

    <TextView
        android:id="@+id/popup_sub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정확한 인원수를 확인해주세요."
        android:textSize="11sp"
        android:textColor="#7E7E7E"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/popup_title_tv"
        app:layout_constraintStart_toStartOf="@id/popup_title_tv"/>

    <TextView
        android:id="@+id/popup_person_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성인"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/popup_sub_tv"
        app:layout_constraintStart_toStartOf="@id/popup_sub_tv"/>

    <TextView
        android:id="@+id/popup_person_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만 19세 이상"
        android:textColor="#7E7E7E"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/popup_person_type_tv"
        app:layout_constraintStart_toStartOf="@id/popup_person_type_tv"/>

    <ImageView
        android:id="@+id/minus_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_minus"
        android:layout_marginStart="120dp"
        app:layout_constraintTop_toTopOf="@id/popup_person_type_tv"
        app:layout_constraintStart_toEndOf="@id/popup_person_type_tv"/>

    <TextView
        android:id="@+id/popup_person_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/popup_person_type_tv"
        app:layout_constraintStart_toEndOf="@id/minus_iv"/>

    <ImageView
        android:id="@+id/plus_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_plus"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/popup_person_num_tv"
        app:layout_constraintStart_toEndOf="@id/popup_person_num_tv"/>


    <ImageView
        android:id="@+id/btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_rectangle"
        android:contentDescription="chk"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/popup_person_age_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="성인 15명, 확인하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/btn_iv"
        app:layout_constraintStart_toStartOf="@id/btn_iv"
        app:layout_constraintEnd_toEndOf="@id/btn_iv"
        app:layout_constraintBottom_toBottomOf="@id/btn_iv"
        />



</androidx.constraintlayout.widget.ConstraintLayout>