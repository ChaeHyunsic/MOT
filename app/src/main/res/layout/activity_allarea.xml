<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllareaActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/area_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <GridLayout
        android:id="@+id/area_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_title">

        <TextView
            android:id="@+id/seoul"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/underline"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="서울"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/gyeonggi"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="경기"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/busan"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="부산"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/daegu"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="대구/경산"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/incheon"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="인천"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/gwangju"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="광주"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/daejeon"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="대전"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ulsan"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="울산"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/chungnam"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="충남/세종"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/gangwon"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="강원"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/chungbuk"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:paddingBottom="13dp"
            android:text="충북"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/jeonbuk"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:paddingBottom="13dp"
            android:text="광주"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/jeonnam"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="전남"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/gyeongbuk"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="경북"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/gyeongnam"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="경남"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/jeju"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/underline"
            android:clickable="true"
            android:text="제주"
            android:textColor="#000000"
            android:textSize="13sp" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_allarea_select"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:contentDescription="allarea"
                android:drawableTop="@drawable/edit_allarea_select"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:text="지역"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_around_select"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:padding="10dp"
                android:text="내 주변"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:contentDescription="myaround"
                android:drawableTop="@drawable/edit_myaround_unselect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_main_select"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:contentDescription="mainhome"
                android:padding="10dp"
                android:text="메인"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/edit_main_unselect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_mypick_select"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:padding="10dp"
                android:contentDescription="mypick"
                android:text="찜"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/edit_mypick_unselect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/btn_mypage_select"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#00ff0000"
                android:contentDescription="mypage"
                android:paddingTop="10dp"
                android:text="마이페이지"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/edit_mypage_unselect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>