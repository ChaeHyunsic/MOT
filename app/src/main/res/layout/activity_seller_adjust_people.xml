<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="#7E7E7E">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/x2"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        android:padding="15dp"
        android:contentDescription="back_btn"
        />
    <TextView
        android:id="@+id/select_people_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원수 선택"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/people_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        app:layout_constraintStart_toStartOf="@id/back_btn"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"/>
    <TextView
        android:id="@+id/small_people_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원수를 설정해주세요"
        android:textColor="#7E7E7E"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/people_str"
        app:layout_constraintTop_toBottomOf="@id/people_str"/>
    <ImageButton
        android:id="@+id/minus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/minus_btn"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@id/people_str"
        app:layout_constraintTop_toTopOf="@id/people_str"
        android:layout_marginStart="150dp"
        android:contentDescription="minus_btn"/>
    <ImageButton
        android:id="@+id/plus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/plus_btn"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="@id/people_str"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:contentDescription="plus_btn"/>

    <EditText
        android:id="@+id/numberBtn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/plus_btn"
        app:layout_constraintStart_toStartOf="@id/minus_btn"
        app:layout_constraintTop_toTopOf="@id/minus_btn"
        tools:ignore="SpeakableTextPresentCheck"/>

    <android.widget.Button
        android:id="@+id/btn_done"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="20dp"
        android:text="인원 선택하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/write_done_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="yellow_bar"/>


</androidx.constraintlayout.widget.ConstraintLayout>